fn range(mut b: i32, e: i32, body: fn(i32) -> ()) -> () {
    while b < e {
        body(b++)
    }
}

fn preprocess_qs(args : [(
        i32,
        i32,
        &[f64],
        &mut[f64],
        &mut[f64],
    )*2]
) -> ()
{
    let arg = args(0);
    let d = arg(0);
    let k = arg(1);
    let icf = arg(2);
    let sum_qs = arg(3);
    let Qdiags = arg(4);

    let icf_sz = d * (d + 1) / 2;

    let mut ik = 0;
    while ik < k {
        sum_qs(ik) = 0.0;

        let mut id = 0;
        while id < d {
            let q = icf(ik * icf_sz + id);
            sum_qs(ik) = sum_qs(ik) + q;
            Qdiags(ik * d + id) = exp(q);
            id++;
        }
        ik++;
    }
}

fn subtract(args : [(
        i32,
        &[f64],
        &[f64],
        &mut[f64],
    )*2]
) -> ()
{

    let arg = args(0);
    let d = arg(0);
    let x = arg(1);
    let y = arg(2);
    let out = arg(3);

    let mut id = 0;
    while id < d {
        out(id) = x(id) - y(id);
        id++;
    }
}

fn Qtimesx(args : [(
        i32,
        &[f64],
        &[f64],
        &[f64],
        &mut[f64],
    )*2]
) -> ()
{
    let arg = args(0);
    let d = arg(0);
    let Qdiag = arg(1);
    let ltri = arg(2);
    let x = arg(3);
    let out = arg(4);

    let mut id = 0;
    while id < d {
        out(id) = Qdiag(id) * x(id);
        id++;
    }

    let mut Lparamsidx = 0;

    let mut i = 0;
    while i < d {
        let mut j = i + 1;
        while j < d {
            out(j) = out(j) + ltri(Lparamsidx) * x(i);
            Lparamsidx++;
            j++;
        }
        i++;
    }
}

fn sqnorm(args : [(
        i32,
        &[f64],
    )*2]
) -> f64
{
    let arg = args(0);
    let d = arg(0);
    let v = arg(1);

    let mut sum = 0.0;
    let mut i = 0;
    while i < d{
        sum += v(i) * v(i);
        i++;
    }

    sum
}

fn arr_max(args : [(
        i32,
        &[f64],
    )*2]
) -> f64
{
    let arg = args(0);
    let n = arg(0);
    let x = arg(1);

    let mut m = x(0);
    let mut i = 1;
    while i < n {
        if (m < x(i)){
            m = x(i);
        }
        i++;
    }

    m
}

fn logsumexp(args : [(
        i32,
        &[f64],
    )*2]
) -> f64
{
    let arg = args(0);
    let n = arg(0);
    let x = arg(1);

    let max_tup = (n, x);
    let mx = arr_max([max_tup, max_tup]);
    let mut semx = 0.0;
    let mut i = 0;
    while i < n {
        semx += exp(x(i) - mx);
        i++;
    }
    log(semx) + mx
}

fn log_gamma_distrib(args : [(
        f64,
        i32,
    )*2]
) -> f64
{
    let arg = args(0);
    let a = arg(0);
    let p = arg(1);

    let PI : f64 = 3.14159;
    let mut out = 0.25 * ((p * (p - 1)) as f64) * log(PI);

    let mut j = 1;
    while j < p+1 {
        out += lgamma(a + 0.5 * ((1 - j) as f64));
        j++;
    }

    out
}


fn log_wishart_prior(
    args:[(
        i32, //p
        i32, //k
        f64, //wishartGamma
        i32, //wishartM
        &[f64], // sum_qs
        &[f64], // Qdiags
        &[f64], // icf
    )*2]
) -> f64{
    let arg = args(0);
    let p: i32 = arg(0);
    let k: i32 = arg(1);
    let wishartGamma: f64 = arg(2);
    let wishartM: i32 = arg(3);
    let sum_qs: &[f64] = arg(4);
    let Qdiags: &[f64] = arg(5);
    let icf: &[f64] = arg(6);

    let n = p + wishartM + 1;
    let icf_sz = p * (p + 1) / 2;

    let distrb_tuble = (0.5 * (n as f64), p);
    let C = (n as f64) * (p as f64) * (log(wishartGamma) - 0.5 * log(2.0)) - log_gamma_distrib([distrb_tuble,distrb_tuble]);

    let mut out = 0.0;

    let mut ik = 0;
    while ik < k {
        let currentQdiags : &[f64] =  &Qdiags(ik * p) as &[f64];
        let currentIfc : &[f64] =  &icf(ik * icf_sz + p) as &[f64];

        let sqnorm_tup = (p, currentQdiags);
        let sqnorm_tup2 = (icf_sz - p, currentIfc);
        let frobenius = sqnorm([sqnorm_tup, sqnorm_tup]) + sqnorm([sqnorm_tup2, sqnorm_tup2]);
        out += 0.5 * wishartGamma * wishartGamma * frobenius - (wishartM as f64) * sum_qs(ik);
        ik++;
    }

    out - (k as f64) * C
}

extern fn gmm(args:[(
      i32, //d
      i32, //k
      i32, //n
      f64, //wishartGamma
      i32, //wishartM
      &[f64], // alphas
      &[f64], // means
      &[f64], // icf
      &[f64] // x
  )*2]) -> f64{

    let arg = args(0);
    let d: i32 = arg(0);
    let k: i32 = arg(1);
    let n: i32 = arg(2);
    let wishartGamma: f64 = arg(3);
    let wishartM: i32 = arg(4);
    let alphas: &[f64] = arg(5);
    let means: &[f64] = arg(6);
    let icf: &[f64] = arg(7);
    let x: &[f64] = arg(8);

    let mut err = 0.0;

    let PI : f64 = 3.14159;
    let CONSTANT = -(n as f64) * ( d as f64) * 0.5 * log(2.0 * PI);
    let icf_sz = d * (d + 1) / 2;

    let Qdiags = ~[d*k:f64];
    let sum_qs = ~[k:f64];
    let xcentered = ~[d:f64];
    let Qxcentered = ~[d:f64];
    let main_term = ~[k:f64];

    let preprocess_tup = (d, k, icf, sum_qs, Qdiags);
    preprocess_qs([preprocess_tup, preprocess_tup]);

    let mut slse = 0.0;

    let mut ix = 0;
    while ix < n {
        let currentX : &[f64] =  &x(ix * d) as &[f64];
        let mut ik = 0;
        while ik < k{
            let currentQdiags =  &Qdiags(ik * d) as &[f64];
            let currentMeans =  &means(ik * d) as &[f64];
            let currentIfc =  &icf(ik * icf_sz + d) as &[f64];

            let subtract_tup = (d, currentX, currentMeans, xcentered);
            subtract([subtract_tup, subtract_tup]);
            let qtimesx_tup = (d, currentQdiags, currentIfc, xcentered, Qxcentered);
            Qtimesx([qtimesx_tup, qtimesx_tup]);
            let sqnorm_tup = (d, Qxcentered);
            main_term(ik) = alphas(ik) + sum_qs(ik) - 0.5 * sqnorm([sqnorm_tup, sqnorm_tup]);
            ik++;
        }
        let lopsum_tup = (k, main_term);
        slse += logsumexp([lopsum_tup, lopsum_tup]);
        ix++;
    }

    let lopsum_tup = (k, alphas);
    let lse_alphas = logsumexp([lopsum_tup, lopsum_tup]);
    let prior_tup = (d, k, wishartGamma, wishartM, sum_qs, Qdiags, icf);
    err = CONSTANT + slse - (n as f64) * lse_alphas + log_wishart_prior([prior_tup, prior_tup]);
    err
}

fn runGmmBenchmark(file: &[u8]) -> (){
    let mut d = 2;
    let mut k = 5;
    let mut n = 1000;

    let dp = &mut d;
    let kp = &mut k;
    let np = &mut n;

    read_gmm_size(file, dp, kp, np);

    let mut wishartM: i32 = 0;
    let mut wishartGamma: f64 = 1.0;

    let alphas_size = k;
    let means_size = d*k;
    let icf_size = k * ( d * (d + 1) / 2 );

    let size = alphas_size + means_size + icf_size;

    let alphas: &mut[f64] = ~[k:f64];
    let means: &mut[f64] = ~[d*k:f64];
    let icf: &mut[f64] = ~[k * ( d + d * ( d - 1 ) / 2 ):f64];
    let x: &mut[f64] = ~[n*d:f64];

    let wishartMp = &mut wishartM;
    let wishartGammap = &mut wishartGamma;

    read_gmm(file, dp, kp, np, wishartMp, wishartGammap, alphas, means, icf, x);

    let tup = (d, k, n, wishartGamma, wishartM, alphas, means, icf, x);

    let result = gmm([tup, tup]);

    let Df = rev_diff(gmm);

    let (y,pb) = Df([tup, tup]);
    //let Gf = pb(1.0);
    //let arg_deriv=Gf(0);
    //let m1_deriv=arg_deriv(2);
    //let m2_deriv=arg_deriv(3);

    printDouble(result);
}


fn main(argc: i32,argv :&[&[u8]]) -> i32 {
    if argc < 2{
        printString("No Benchmark specified");
    }else{
        let file = argv(1);
        printString(file);
        runGmmBenchmark(file);
    }

    0
}




